---
import "../tailwind.css";
import SocialIconsRow from "./SocialIconsRow.astro";

interface Props {
    color?: string;
}

// Default to a dark background for workshop-style look
const { color = "gray-900" } = Astro.props;

const year = new Date().getFullYear();
---

<div class="mt-0">
    <footer class=`bg-gray-800 text-white py-10 pb-safe`>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-center">
                <SocialIconsRow />
            </div>
            <div class="text-center mt-10 pb-12 md:pb-8">
                <p class="text-gray-300">
                    © {year} Urban Arquitectura. Todos los derechos reservados.
                </p>
                <div class="text-gray-400">
                    <p>
                        Desarrollado por <a
                            href="https://campustd.mx/"
                            class="text-white underline hover:text-blue-200 transition-colors"
                        >
                            © Campus TD</a
                        >
                    </p>
                </div>
                <div class="text-center text-gray-600 mt-4"></div>
            </div>
        </div>
    </footer>

    <style>
        /* Add safe area padding for mobile devices with bottom navigation bars */
        .pb-safe {
            padding-bottom: env(safe-area-inset-bottom, 2rem);
        }
        /* Ensure all links are properly distinguishable */
        footer a:not(.no-underline) {
            text-decoration: underline;
            text-underline-offset: 2px;
        }
        footer a:hover {
            opacity: 0.9;
        }
    </style>
</div>
