---
interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section
    class="w-full mt-20 px-4 py-12 md:py-20 bg-gradient-to-b from-black to-gray-900"
>
    <div class="container mx-auto">
        <h1
            class="text-3xl md:text-5xl font-poppins font-bold text-center mb-4 text-gray-300"
        >
            {title}
        </h1>
        <p
            class="text-lg md:text-xl text-center max-w-3xl mx-auto font-light text-gray-300"
        >
            {subtitle}
        </p>
    </div>
</section>
