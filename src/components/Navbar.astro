---
interface Props {
    links?: { text: string; url: string }[];
}

const {
    links = [
        { text: "Inicio", url: "/" },
        { text: "Servicios", url: "/" },
        { text: "Nosotros", url: "/" },
        { text: "Contacto", url: "/" },
    ],
} = Astro.props;
---

<nav class="navbar">
    <div class="navbar-brand">
        <a href="/" class="logo">
            <img
                src="../public/icons/logo_web.svg"
                alt="Logo Desktop"
                class="logo-web"
            />
            <img
                src="../public/icons/logo_movil.svg"
                alt="Logo Mobile"
                class="logo-mobile"
            />
        </a>
    </div>

    <div class="navbar-menu">
        {
            links.map((link) => (
                <a href={link.url} class="nav-link">
                    {link.text}
                </a>
            ))
        }
    </div>
</nav>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap");

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 80px; /* Reducido de 90px a 80px */
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2rem;
        background: #000000; /* Cambiado a negro s칩lido */
        backdrop-filter: none;
        -webkit-backdrop-filter: none;
        z-index: 1000;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
    }

    .logo {
        display: flex;
        align-items: center;
        font-family: "Lato", sans-serif;
    }

    .logo img {
        height: 45px; /* Reducido de 50px a 45px */
        width: auto;
        object-fit: contain;
    }

    .logo-mobile {
        display: none;
    }

    .logo-web {
        display: block;
    }

    .logo {
        color: white;
        font-size: 1.7rem; /* Aumentado de 1.5rem */
        font-weight: 700; /* Aumentado de 600 */
        text-decoration: none;
        font-family: "Montserrat", sans-serif;
        transition: color 0.3s ease;
        cursor: pointer;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* A침adido sombra de texto */
    }

    .logo:hover {
        color: #ccc;
    }

    .navbar-menu {
        display: flex;
        gap: 2rem;
    }

    .nav-link {
        color: white;
        text-decoration: none;
        font-family: "Montserrat", sans-serif;
        font-size: 0.9rem; /* Reducido de 1.1rem a 0.9rem */
        font-weight: 400;
        letter-spacing: 0.2em; /* Added letter spacing */
        transition: all 0.3s ease;
        position: relative;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .nav-link::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: white;
        transition: width 0.3s ease;
        box-shadow: 0 0 4px rgba(255, 255, 255, 0.5); /* A침adido brillo al subrayado */
    }

    .nav-link:hover::after {
        width: 100%;
    }

    @media (max-width: 768px) {
        .navbar {
            padding: 0 1rem;
        }

        .navbar-menu {
            gap: 1rem;
        }

        .nav-link {
            font-size: 0.8rem; /* Reducido de 1rem a 0.8rem para m칩vil */
        }

        .logo-web {
            display: none;
        }

        .logo-mobile {
            display: block;
            height: 35px; /* Reducido de 40px a 35px */
        }
    }
</style>
