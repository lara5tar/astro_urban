---
interface Props {
    pregunta: string;
    accion?: () => void | Promise<void>;
}

const { pregunta, accion } = Astro.props;
---

<div class="flex justify-around">
    <div
        class="bg-white border-4 border-[#2e8d80] text-gray-800 rounded-xl shadow-lg text-center py-3 sm:py-4 md:py-5 px-3 sm:px-4 md:px-5"
    >
        <h4
            class="text-base sm:text-lg md:text-xl lg:text-2xl font-bold font-poppins"
        >
            {pregunta}
        </h4>
    </div>
</div>
