---
import Carousel from "../components/Carousel.astro";
import Navbar from "../components/Navbar.astro";
import HeroWithImage from "../components/HeroWithImage.astro";

import imagen1 from "/public/carousel/web/Imagen1.webp";
import imagen2 from "/public/carousel/web/Imagen2.webp";
import imagen3 from "/public/carousel/web/Imagen3.webp";
import imagen4 from "/public/carousel/web/Imagen4.webp";
import imagen5 from "/public/carousel/web/Imagen5.webp";
import imagen6 from "/public/carousel/web/Imagen6.webp";

import imagen1Mobile from "/public/carousel/movil/1.webp";
import imagen2Mobile from "/public/carousel/movil/2.webp";
import imagen3Mobile from "/public/carousel/movil/3.webp";
import imagen4Mobile from "/public/carousel/movil/4.webp";
import imagen5Mobile from "/public/carousel/movil/5.webp";
import imagen6Mobile from "/public/carousel/movil/6.webp";

import iconUrban from "/public/icons/icon_urban.svg";

const slides = [
  {
    image: imagen1,
    mobileImage: imagen1Mobile,
    title: "Título 1",
    description: "Construya a su gusto y ahorre un 25% con nosotros",
  },
  {
    image: imagen2,
    mobileImage: imagen2Mobile,
    title: "Título 2",
    description: "Contrato de obra y garantía por escrito",
  },
  {
    image: imagen3,
    mobileImage: imagen3Mobile,
    title: "Título 3",
    description: "Arquitectura de vanguardia, efiencia y sustentable",
  },
  {
    image: imagen4,
    mobileImage: imagen4Mobile,
    title: "Título 4",
    description: "Servicio profesional en pintura y impermeabilización",
  },
  {
    image: imagen5,
    mobileImage: imagen5Mobile,
    title: "Título 5",
    description:
      "Talleres de acabados finos: Carpintería, Cancelería y Herrería",
  },
  {
    image: imagen6,
    mobileImage: imagen6Mobile,
    title: "Título 6",
    description: "Arquitectura y Construccion a la medida de su presupuesto",
  },
];
---

<html>
  <head>
    <title>Carrusel de Imágenes</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="fixed top-0 left-0 w-full z-50">
      <Navbar />
    </div>
    <Carousel
      slides={slides}
      interval={5000}
      showArrows={true}
      showDots={true}
      showText={true}
    />
    <HeroWithImage
      title="NOSOTROS"
      imageSrc={iconUrban}
      imagePosition="right"
      height="550px"
    >
      <p>
        Somos un despacho de <strong
          >Arquitectura y Construcción Residencial</strong
        >, con más de <strong>25 años de experiencia</strong> en el mercado, nos
        enfocamos en desarrollar <strong>espcios a la medida</strong> con la más
        <strong>alta calidad</strong>. Nuestra sede se ubica en Santiago de
        Querétaro, con cobertura nacional.
      </p>
    </HeroWithImage>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background: #000;
  }

  .content-wrapper {
    background-color: white;
    padding: 120px 20px 120px;
    position: relative;
    overflow: hidden;
  }

  .background-icon {
    position: absolute;
    top: 50%;
    right: 5%;
    transform: translateY(-50%);
    width: 600px;
    height: 600px;
    background-image: url("/icons/icon_urban.svg");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    opacity: 0.1;
    z-index: 1;
  }

  .content-container {
    position: relative;
    z-index: 2;
  }

  .title-section {
    text-align: center;
  }

  .title-section h1 {
    color: #2e8d80;
    font-family: "Poppins", sans-serif;
    font-weight: 500;
    font-size: clamp(60px, 9vw, 140px);
    margin: 0;
    padding: 0;
    filter: drop-shadow(4px 4px 4px rgba(114, 114, 114, 0.95));
  }

  .description-section {
    max-width: 900px;
    margin: 0 auto;
  }

  .description-section p {
    color: #000000;
    font-family: "Lato", sans-serif;
    font-size: clamp(20px, 2vw, 26px);
    font-weight: 300;
    line-height: 1.6;
    text-align: center;
    margin: 0;
  }

  .description-section strong {
    font-weight: 700;
  }

  /* @media (max-width: 768px) {
    .content-wrapper {
      padding: 20px 2rem 20px;
    }
  } */

  @media (max-width: 768px) {
    .background-icon {
      width: 400px;
      height: 400px;
      right: -10%;
    }
  }
</style>
