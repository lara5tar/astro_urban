---
const projectTimeline = [
    {
        phase: "Elaboración del Proyecto Arquitectónico",
        time: "1 mes",
        description:
            "Incluye el diseño conceptual y desarrollo de planos arquitectónicos.",
    },
    {
        phase: "Gestión de Permisos",
        time: "2 meses",
        description:
            "Tiempo estimado para tramitar las licencias y autorizaciones necesarias.",
    },
    {
        phase: "Ejecución de la Obra",
        time: "6 meses",
        description:
            "Desde la preparación del terreno hasta la entrega final de la obra.",
    },
];
---

<section class="py-12 px-4 md:px-8 bg-white">
    <div class="container mx-auto">
        <h2
            class="text-3xl md:text-4xl font-bold text-center mb-12 font-montserrat"
        >
            CRONOGRAMA DE PROYECTO
        </h2>

        <div class="space-y-6 max-w-3xl mx-auto">
            {
                projectTimeline.map((item) => (
                    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
                        <div class="inline-block px-3 py-1 rounded-full bg-[#1e665c] text-white font-bold mb-2">
                            {item.time}
                        </div>
                        <h3 class="text-xl font-bold mb-2">{item.phase}</h3>
                        <p>{item.description}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
