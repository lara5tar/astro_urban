---
import { Image } from "astro:assets";

interface Props {
    title: string;
    imageSrc: ImageMetadata;
    imagePosition?: "left" | "center" | "right";
    height?: string;
}

const {
    title,
    imageSrc,
    imagePosition = "center",
    height = "400px",
} = Astro.props as Props;
---

<section
    class="hero-section"
    style={`--section-height: ${height};`}
    aria-labelledby="hero-title"
>
    <div class="content-container">
        <div class="title-section">
            <h1 id="hero-title">{title}</h1>
        </div>
        <div class="description-section" role="contentinfo">
            <slot />
        </div>
    </div>

    <div class={`image-container image-position-${imagePosition}`}>
        <Image
            src={imageSrc}
            alt="Background decoration"
            class="background-image"
            aria-hidden="true"
        />
    </div>
</section>

<style>
    /* Variables CSS */
    :root {
        --font-title: "Poppins", sans-serif;
        --font-body: "Lato", sans-serif;
        /* --color-primary: #2e8d80;
        --color-text: #000000;
        --color-background: #ffffff; */
        --spacing-base: 1rem;
        --title-shadow: 4px 4px 4px rgba(114, 114, 114, 0.95);
    }

    /* Layout */
    .hero-section {
        background-color: white;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        width: 100%;
        min-height: var(--section-height);
    }

    .content-container {
        position: relative;
        z-index: 2;
        width: min(100%, 1200px);
        /* margin-inline: auto; */
        text-align: center;
        /* padding-block: calc(var(--spacing-base) * 2); */
        /* background-color: red; */
    }

    /* Imagen de fondo */
    .image-container {
        position: absolute;
        inset: 0;
        z-index: 1;
        display: flex;
    }

    .image-position-left {
        justify-content: flex-start;
    }
    .image-position-center {
        justify-content: center;
    }
    .image-position-right {
        justify-content: flex-end;
    }

    .background-image {
        height: 100%;
        width: auto;
        object-fit: contain;
        opacity: 0.5;
        transition: opacity 0.3s ease;
        /* background-color: red; */
    }

    /* Tipograf√≠a */
    .title-section h1 {
        color: #2e8d80;
        font-family: var(--font-title);
        font-weight: 500;
        font-size: clamp(2.5rem, 10vw, 8.75rem);
        line-height: 1.1;
        margin: 0 0rem 0;

        filter: drop-shadow(var(--title-shadow));
        /* background-color: blue; */
    }

    .description-section {
        max-width: 90ch;
        margin-inline: auto;
        padding-inline: var(--spacing-base);
    }

    .description-section :global(p) {
        color: var(--color-text);
        font-family: var(--font-body);
        font-size: clamp(1.25rem, 2vw, 1.625rem);
        font-weight: 300;
        line-height: 1.6;
        /* margin-block: calc(var(--spacing-base) * 1.5); */
        /* background-color: green; */
        margin: 0 0.5rem 0;
    }

    .description-section :global(strong) {
        font-weight: 700;
    }

    /* Media queries */
    @media (max-width: 768px) {
        .content-container {
            padding-inline: calc(var(--spacing-base) * 0.5);
        }

        .background-image {
            width: 100%;
            height: auto;
        }
    }
</style>
