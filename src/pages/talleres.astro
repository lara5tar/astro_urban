---
import "../tailwind.css";
import Navbar from "../components/Navbar.astro";
import CriticalStyles from "../components/CriticalStyles.astro";
import { Image } from "astro:assets";

// Import web images
import carpinteriaWeb from "/public/menu-talleres/web/carpinteria.webp";
import canceleriaWeb from "/public/menu-talleres/web/canceleria.webp";
import herreriaWeb from "/public/menu-talleres/web/herreria.webp";
import acabadosWeb from "/public/menu-talleres/web/acabados.webp";

// Import mobile images
import carpinteriaMovil from "/public/menu-talleres/movil/carpinteria.webp";
import canceleriaMovil from "/public/menu-talleres/movil/canceleria.webp";
import herreriaMovil from "/public/menu-talleres/movil/herreria.webp";
import acabadosMovil from "/public/menu-talleres/movil/acabados.webp";
import WhatsAppButton from "../components/WhatsAppButton.astro";

// Define workshop items with image configurations and URLs
const talleres = [
    {
        title: "Carpintería Fina",
        webImage: carpinteriaWeb,
        movilImage: carpinteriaMovil,
        url: "/talleres/carpinteria",
    },
    {
        title: "Cancelería de Diseño",
        webImage: canceleriaWeb,
        movilImage: canceleriaMovil,
        url: "/talleres/canceleria",
    },
    {
        title: "Herrería Artística",
        webImage: herreriaWeb,
        movilImage: herreriaMovil,
        url: "/talleres/herreria",
    },
    {
        title: "Impermeabilizaciones y Pintura",
        webImage: acabadosWeb,
        movilImage: acabadosMovil,
        url: "/talleres/acabados",
    },
];
---

<html>
    <head>
        <title>Talleres</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Critical CSS for performance -->
        <CriticalStyles />

        <!-- Font loading -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Lato:wght@300;400;700&family=Poppins:wght@500;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <nav>
        <Navbar />
    </nav>
    <body>
        <main class="talleres-main">
            <section class="talleres-gallery">
                {
                    talleres.map((taller, index) => (
                        <a
                            href={taller.url}
                            class="taller-item animate-item"
                            data-index={index}
                        >
                            {/* Desktop image - hidden on mobile */}
                            <div class="desktop-only">
                                <Image
                                    src={taller.webImage}
                                    alt={taller.title}
                                    class="taller-image"
                                />
                            </div>
                            {/* Mobile image - hidden on desktop */}
                            <div class="mobile-only">
                                <Image
                                    src={taller.movilImage}
                                    alt={taller.title}
                                    class="taller-image"
                                />
                            </div>
                            <div class="taller-overlay">
                                <h2 class="taller-title">{taller.title}</h2>
                            </div>
                        </a>
                    ))
                }
            </section>
        </main>

        <script>
            // Animation for items when page loads
            document.addEventListener("DOMContentLoaded", () => {
                const items = document.querySelectorAll(".animate-item");
                items.forEach((item, index) => {
                    setTimeout(() => {
                        item.classList.add("visible");
                    }, index * 200); // Stagger the animations
                });
            });
        </script>
        <WhatsAppButton />
    </body>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #000000;
            font-family: "Lato", sans-serif;
            overflow-x: hidden;
        }

        .talleres-main {
            height: calc(100vh - var(--navbar-height, 80px));
            width: 100%;
            margin-top: var(--navbar-height, 80px);
        }

        .talleres-gallery {
            display: flex;
            flex-direction: row;
            padding: 0;
            margin: 0;
            gap: 0;
            width: 100%;
            height: 100%;
        }

        .taller-item {
            position: relative;
            flex: 1;
            height: 100%;
            overflow: hidden;
            text-decoration: none; /* Remove default link styling */
            display: block;
            cursor: pointer;
            opacity: 0;
            transform: translateY(50px);
            transition:
                opacity 0.6s ease,
                transform 0.6s ease,
                filter 0.3s ease;
            filter: grayscale(0.3);
        }

        .taller-item.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .taller-item:hover {
            transform: scale(1.02);
            z-index: 2;
            filter: grayscale(0);
        }

        .taller-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.5s ease;
        }

        .taller-item:hover .taller-image {
            transform: scale(1.05);
        }

        .desktop-only {
            display: block;
            width: 100%;
            height: 100%;
        }

        .mobile-only {
            display: none;
            width: 100%;
            height: 100%;
        }

        .taller-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.5);
            transition:
                background 0.3s ease,
                transform 0.3s ease;
        }

        .taller-overlay:hover {
            background: rgba(0, 0, 0, 0.7);
        }

        .taller-title {
            color: white;
            font-family: "Poppins", sans-serif;
            font-size: clamp(1.2rem, 2.5vw, 2.2rem);
            font-weight: 500;
            text-align: center;
            padding: 0.5rem;
            max-width: 90%;
            line-height: 1.2;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            transition: transform 0.3s ease;
            word-wrap: break-word;
            hyphens: auto;
        }

        .taller-item:hover .taller-title {
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            .talleres-gallery {
                flex-direction: column-reverse; /* Display from bottom to top on mobile */
                height: calc(100vh - var(--navbar-height, 60px));
            }

            .taller-item {
                width: 100%;
                height: 25%;
            }

            .desktop-only {
                display: none;
            }

            .mobile-only {
                display: block;
            }

            .taller-title {
                font-size: clamp(1rem, 4vw, 1.8rem);
                padding: 0.3rem;
                line-height: 1.1;
            }
        }
    </style>
</html>
