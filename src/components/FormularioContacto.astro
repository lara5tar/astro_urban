---
interface PropiedadOption {
    id: string;
    nombre: string;
}

interface Props {
    propiedades: PropiedadOption[];
}

const { propiedades } = Astro.props;
---

<section id="contacto" class="w-full px-4 py-12 md:py-16 bg-gray-900">
    <div class="container mx-auto">
        <h2
            class="text-2xl md:text-4xl font-poppins font-bold text-center mb-8"
        >
            ¿Interesado en alguna propiedad?
        </h2>
        <p class="text-center text-gray-300 max-w-3xl mx-auto mb-10">
            Completa el siguiente formulario y uno de nuestros asesores te
            contactará para brindarte toda la información que necesitas.
        </p>

        <div
            class="max-w-2xl mx-auto bg-gray-800 rounded-xl p-6 md:p-8 shadow-xl"
        >
            <form id="contactForm" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label
                            for="nombre"
                            class="block text-sm font-medium text-gray-300 mb-1"
                            >Nombre completo *</label
                        >
                        <input
                            type="text"
                            id="nombre"
                            name="nombre"
                            class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-primary"
                            required
                        />
                    </div>
                    <div>
                        <label
                            for="telefono"
                            class="block text-sm font-medium text-gray-300 mb-1"
                            >Teléfono *</label
                        >
                        <input
                            type="tel"
                            id="telefono"
                            name="telefono"
                            class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-primary"
                            required
                        />
                    </div>
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-300 mb-1"
                        >Correo electrónico *</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-primary"
                        required
                    />
                </div>

                <div>
                    <label
                        for="modelo"
                        class="block text-sm font-medium text-gray-300 mb-1"
                        >Modelo de interés</label
                    >
                    <select
                        id="modelo"
                        name="modelo"
                        class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-primary"
                    >
                        <option value="">Selecciona un modelo</option>
                        {
                            propiedades.map((propiedad) => (
                                <option value={propiedad.id}>
                                    Modelo {propiedad.nombre}
                                </option>
                            ))
                        }
                    </select>
                </div>

                <div>
                    <label
                        for="mensaje"
                        class="block text-sm font-medium text-gray-300 mb-1"
                        >Mensaje</label
                    >
                    <textarea
                        id="mensaje"
                        name="mensaje"
                        rows="4"
                        class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-primary"
                    ></textarea>
                </div>

                <div class="flex justify-center">
                    <button
                        type="submit"
                        class="bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-full shadow-md transition-all duration-300 w-full md:w-auto"
                    >
                        Enviar solicitud
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    // Funcionalidad del formulario
    document.addEventListener("DOMContentLoaded", function () {
        const contactForm = document.getElementById(
            "contactForm",
        ) as HTMLFormElement | null;

        if (contactForm) {
            contactForm.addEventListener("submit", function (e) {
                e.preventDefault();

                // Aquí se podría implementar la lógica para enviar el formulario
                // Por ahora solo mostramos un alert
                alert(
                    "¡Gracias por tu interés! Te contactaremos a la brevedad.",
                );
                contactForm.reset();
            });
        }
    });
</script>

<style>
    /* Personalización de formularios */
    input:focus,
    select:focus,
    textarea:focus {
        border-color: #2e8d80;
    }
</style>
