---
import Navbar from "../components/Navbar.astro";
import Gallery from "../components/Gallery.astro";

const menuLinks = [
    { text: "Portafolio", url: "/portfolio" },
    { text: "Talleres", url: "/" },
    { text: "Contacto", url: "/" },
];

const galleryItems = [
    { image: "/public/Imagen1.webp", title: "Proyecto 1", category: "Diseño" },
    {
        image: "/public/Imagen2.webp",
        title: "Proyecto 2",
        category: "Fotografía",
    },
    { image: "/public/Imagen1.webp", title: "Proyecto 3", category: "Arte" },
    { image: "/public/Imagen2.webp", title: "Proyecto 4", category: "Diseño" },
    {
        image: "/public/Imagen1.webp",
        title: "Proyecto 5",
        category: "Fotografía",
    },
    { image: "/public/Imagen2.webp", title: "Proyecto 6", category: "Arte" },
];
---

<html>
    <head>
        <title>Portafolio</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <Navbar links={menuLinks} />
        <main>
            <h1>Portafolio</h1>
            <Gallery items={galleryItems} />
        </main>
    </body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        background: #000;
        color: white;
    }

    main {
        padding: 2rem;
        margin-top: 60px; /* Ajusta este valor según la altura de tu Navbar */
    }

    h1 {
        text-align: center;
        font-family: "Montserrat", sans-serif;
        margin-bottom: 2rem;
    }
</style>
