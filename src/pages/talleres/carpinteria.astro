---
import "../../tailwind.css";
import Navbar from "../../components/Navbar.astro";
import CriticalStyles from "../../components/CriticalStyles.astro";
import TallerDetail from "../../components/TallerDetail.astro";

// Import images directly
import mainImage from "/src/public/talleres/carpinteria/main.webp";
import mdf from "/src/public/talleres/carpinteria/mdf.webp";
import madera from "/src/public/talleres/carpinteria/madera.webp";

// Define options for carpintería with HTML formatting
const options = [
    {
        id: "mdf",
        title: "Carpintería en melamina (MDF)",
        description:
            "<strong>Ofrecemos soluciones integrales</strong> a particulares y empresas constructorasdiseñando y fabricando toda la carpintería que un nuevo proyecto requiere, minimizandoel tiempo de entrega. Fabricamos entre otras cosas, <strong>cocinas integrales, closet, vestidores, muebles de lavabo, alacenas,recamaras integrales.</strong>",
        image: mdf,
    },
    {
        id: "madera",
        title: "Carpintería en madera",
        description:
            "Nuestros artesanos darán forma a maderas finas, nacionales e importadas, creandopiezas únicas, <strong>cuidando con especial atención los detalles</strong> y acabadosfinales. Especialistas en <strong>diseño y fabricación</strong> a la medida de <strong>puertas principales, mobiliario residencial y de oficina.</strong>",
        image: madera,
    },
];

// Main description with HTML formatting
const description =
    "<strong>Expertos carpinteros y ebanistas materializarán diseños exclusivos</strong> que nuestros arquitectos especializados en mobiliario realicen en base a sus gustos y necesidades, superando ampliamente sus expectativas.";

// Navigation routes
const prevTaller = "/talleres/acabados";
const nextTaller = "/talleres/canceleria";
---

<html>
    <head>
        <title>Carpintería Fina</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <CriticalStyles />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Lato:wght@300;400;700&family=Poppins:wght@500;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <Navbar />

        <TallerDetail
            title="Carpintería Fina"
            mainImage={mainImage}
            description={description}
            options={options}
            prevTaller={prevTaller}
            nextTaller={nextTaller}
        />
    </body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
</style>
