---
const projectTimeline = [
    {
        phase: "Elaboración del Proyecto Arquitectónico",
        time: "1 mes",
        description:
            "Incluye el diseño conceptual y desarrollo de planos arquitectónicos.",
    },
    {
        phase: "Gestión de Permisos",
        time: "2 meses",
        description:
            "Tiempo estimado para tramitar las licencias y autorizaciones necesarias.",
    },
    {
        phase: "Ejecución de la Obra",
        time: "6 meses",
        description:
            "Desde la preparación del terreno hasta la entrega final de la obra.",
    },
];
---

<section class="py-16 px-4 bg-gradient-to-r from-gray-50 to-gray-100">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h2
                class="text-4xl md:text-5xl font-bold text-[#2e8d80] mb-4 font-poppins drop-shadow-md"
            >
                Tiempos Estimados para la Realización de un Proyecto Residencial
            </h2>
            <div class="w-32 h-1 bg-[#2e8d80] mx-auto"></div>
        </div>

        <!-- Desktop timeline (hidden on mobile) -->
        <div class="relative hidden md:block">
            <!-- Timeline bar -->
            <div
                class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-[#2e8d80]"
            >
            </div>

            <div class="space-y-12">
                {
                    projectTimeline.map((item, index) => (
                        <div class="flex flex-row items-center">
                            {/* Left column */}
                            <div class="w-1/2 pr-12 text-right">
                                {index % 2 === 0 && (
                                    <div class="bg-white p-6 rounded-lg shadow-lg border-t-4 border-[#2e8d80]">
                                        <h3 class="text-2xl font-bold text-gray-800 mb-2 font-poppins">
                                            {item.phase}
                                        </h3>
                                        <div class="inline-block px-4 py-1 rounded-full bg-[#2e8d80] text-white font-bold mb-3">
                                            {item.time}
                                        </div>
                                        <p class="text-gray-600 font-lato">
                                            {item.description}
                                        </p>
                                    </div>
                                )}
                            </div>

                            {/* Center dot */}
                            <div class="flex items-center justify-center z-10 my-0">
                                <div class="w-10 h-10 rounded-full border-4 border-[#2e8d80] bg-white flex items-center justify-center">
                                    <span class="text-[#2e8d80] font-bold">
                                        {index + 1}
                                    </span>
                                </div>
                            </div>

                            {/* Right column */}
                            <div class="w-1/2 pl-12">
                                {index % 2 === 1 && (
                                    <div class="bg-white p-6 rounded-lg shadow-lg border-t-4 border-[#2e8d80]">
                                        <h3 class="text-2xl font-bold text-gray-800 mb-2 font-poppins">
                                            {item.phase}
                                        </h3>
                                        <div class="inline-block px-4 py-1 rounded-full bg-[#2e8d80] text-white font-bold mb-3">
                                            {item.time}
                                        </div>
                                        <p class="text-gray-600 font-lato">
                                            {item.description}
                                        </p>
                                    </div>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Mobile timeline (visible only on mobile) -->
        <div class="md:hidden space-y-6">
            {
                projectTimeline.map((item, index) => (
                    <div class="relative pl-8 border-l-4 border-[#2e8d80]">
                        <div class="absolute -left-3 top-0 w-6 h-6 rounded-full bg-[#2e8d80] flex items-center justify-center">
                            <span class="text-white font-bold">
                                {index + 1}
                            </span>
                        </div>
                        <div class="bg-white p-5 rounded-lg shadow-md">
                            <h3 class="text-xl font-bold text-gray-800 mb-2 font-poppins">
                                {item.phase}
                            </h3>
                            <div class="inline-block px-3 py-1 rounded-full bg-[#2e8d80] text-white font-bold mb-2 text-sm">
                                {item.time}
                            </div>
                            <p class="text-gray-600 font-lato text-sm">
                                {item.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
