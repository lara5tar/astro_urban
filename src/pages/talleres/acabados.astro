---
import "../../tailwind.css";
import Navbar from "../../components/Navbar.astro";
import CriticalStyles from "../../components/CriticalStyles.astro";
import TallerDetail from "../../components/TallerDetail.astro";

// Import images directly
import mainImage from "/src/public/talleres/pintura/main.webp";
import acrilicoImage from "/src/public/talleres/pintura/acrilico.webp";
import prefabricadaImage from "/src/public/talleres/pintura/prefabricada.webp";
import nanotecnologicoImage from "/src/public/talleres/pintura/nanotec.webp";
import pinturaImage from "/src/public/talleres/pintura/pintura.webp";

// Define options for cancelería
const options = [
    {
        id: "acrilico",
        title: "Impermeabilizante acrílico",
        description:
            "Es un <strong>recubrimiento impermeable y aislante térmico</strong> acrílico elastomérico integral base agua 100% ecológico de aplicación en frío, para proteger la humedad en cualquier superficie horizontal con una pendiente mínima del 2% y en superficies verticales tales como muros y fachadas. Estos productos nos permiten otorgar <strong>garantías a elegir de 3, 5 y 8 años</strong>, en colores blanco y terracota.",
        image: acrilicoImage,
    },
    {
        id: "prefabricado",
        title: "Impermeabilizante prefabricado",
        description:
            "Es un <strong>sistema impermeable laminar prefabricado de alto desempeño</strong> compuesto por una malla de fibra de vidrio o poliéster a escoger, cubierto en ambas caras por una película de asfalto modificado con polímero estireno-butadieno-estireno (SBS), de aplicación en caliente. Este sistema ofrece <strong>espesores desde 3.0 mm a 5.0 mm</strong> con garantías que van desde los <strong>3 hasta los 12 años</strong>, es ideal para prácticamente cualquier superficie horizontal con pendiente mínima del 2%. ",
        image: prefabricadaImage,
    },
    {
        id: "nanotecnologico",
        title: "Impermeabilizante nanotecnológico",
        description:
            "Es un repelente de líquidos de penetración profunda y repelente solar UV 100% ecológico y orgánico a base de microcristales líquidos, <strong>nanotecnología de última generación</strong>. Las partículas entran por los poros y se fusionan con la superficie volviéndose parte de la estructura atómica del sustrato. Sellan prácticamente cualquier superficie horizontal y vertical, de secado rápido y resultados inmediatos. Su aplicación es por aspersión y tiene una <strong>durabilidad de 25 años.</strong>",
        image: nanotecnologicoImage,
    },
    {
        id: "comercial",
        title: "Pintura residencial y comercial",
        description:
            "Personal capacitado en diferentes técnicas solucionarán sus trabajos de <strong>pintura residencial comercial e industrial</strong> de cualquier magnitud, optimizando los materiales y realizando el servicio en un mínimo de tiempo. Damos servicio a: <strong>casas, edificios, plazas comerciales, estructuras metálicas y naves industriales.</strong>",
        image: pinturaImage,
    },
];

// Main description

const titulo = "Impermeabilizaciones y Pintura";
const description =
    "Contamos con <strong>profesionales altamente capacitados</strong> para darle la solución definitiva a problemas de pintura y humedad, tanto en el <strong>ámbito residencial, comercial e industrial</strong>, utilizando productos de la más alta calidad lo que nos permite otorgar garantía en todos nuestros servicios. Con más de <strong>20 años de experiencia</strong>, nos especializamos en estos 3 tipos de impermeabilizantes:";

// Navigation routes
const prevTaller = "/talleres/canceleria";
const nextTaller = "/talleres/carpinteria";
---

<html>
    <head>
        <title>{titulo}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <CriticalStyles />
        <!-- Para dispositivos iOS -->
        <link rel="apple-touch-icon" sizes="180x180" href="favicon02.png" />

        <!-- Para dispositivos Android -->
        <link
            rel="icon"
            type="image/png"
            sizes="192x192"
            href="favicon02.png"
        />

        <!-- Favicon -->
        <link rel="icon" type="image/png" sizes="32x32" href="icono.png" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Lato:wght@300;400;700&family=Poppins:wght@500;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <Navbar />

        <TallerDetail
            title={titulo}
            mainImage={mainImage}
            description={description}
            options={options}
            prevTaller={prevTaller}
            nextTaller={nextTaller}
        />
    </body>
</html>

<style>
    :root {
        --sat: env(safe-area-inset-top, 0px);
        --sab: env(safe-area-inset-bottom, 0px);
        --sal: env(safe-area-inset-left, 0px);
        --sar: env(safe-area-inset-right, 0px);
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    @supports (padding: max(0px)) {
        body {
            padding-left: max(0px, var(--sal));
            padding-right: max(0px, var(--sar));
        }
    }
</style>
